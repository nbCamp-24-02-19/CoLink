<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_corner_20dp"
    android:layout_marginHorizontal="24dp"
    android:clipToOutline="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_view_whitebg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_home_bottom_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_corner_12dp"
            android:backgroundTint="@color/forth_color"
            android:fontFamily="@font/inter_bold"
            android:text="@string/home_bottom_project"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_bottom_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_corner_12dp"
            android:backgroundTint="@color/study_color"
            android:fontFamily="@font/inter_bold"
            android:text="@string/home_bottom_study"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_bottom_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/home_bottom_example_title"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_bottom_project" />

        <TextView
            android:id="@+id/tv_home_bottom_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/home_bottom_example_des"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_bottom_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay_bottom_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_bottom_des">

            <TextView
                android:id="@+id/tv_home_bottom_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:text="@string/home_bottom_example_kind"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/forth_color"
                app:layout_constraintEnd_toStartOf="@+id/view_home_bottom_divider"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_home_bottom_divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="5dp"
                android:background="@color/typo_color"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_bottom_team"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_home_bottom_kind"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home_bottom_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:text="@string/home_bottom_example_team"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view_home_bottom_divider"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/iv_home_bottom_thumubnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/img_dialog_study"
            app:layout_constraintBottom_toBottomOf="@id/lay_bottom_kind"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_home_bottom_project" />

        <View
            android:id="@+id/view_home_bottom_blind"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#A6000000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintEnd_toEndOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintStart_toStartOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintTop_toTopOf="@id/iv_home_bottom_thumubnail" />

        <TextView
            android:id="@+id/tv_home_bottom_blind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_bottom_example_complete"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintEnd_toEndOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintStart_toStartOf="@id/iv_home_bottom_thumubnail"
            app:layout_constraintTop_toTopOf="@id/iv_home_bottom_thumubnail" />

        <View
            android:id="@+id/view_home_divide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/lay_bottom_kind" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>