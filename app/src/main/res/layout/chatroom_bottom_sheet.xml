<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:columnCount="4"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_chatroom_gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_background_circle"
            android:backgroundTint="@color/calender_color_green"
            android:src="@drawable/outline_image_24"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="갤러리"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_chatroom_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="8dp"
            android:background="@drawable/bg_background_circle"
            android:backgroundTint="@color/calender_color_blue"
            android:src="@drawable/outline_camera_alt_24"
            android:layout_gravity="center"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카메라"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical">
    </LinearLayout>


</GridLayout>