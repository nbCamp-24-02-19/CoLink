<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:background="@color/white"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/iv_minus_personnel"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/bg_stepper_circle"
        android:scaleType="centerInside"
        android:src="@drawable/ic_remove_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recruit_personnel"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_spinner"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/iv_minus_personnel"
        app:layout_constraintStart_toEndOf="@id/iv_minus_personnel"
        app:layout_constraintTop_toTopOf="@id/iv_minus_personnel" />

    <ImageView
        android:id="@+id/iv_plus_personnel"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_stepper_circle"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add_24"
        app:layout_constraintBottom_toBottomOf="@id/iv_minus_personnel"
        app:layout_constraintStart_toEndOf="@id/tv_recruit_personnel"
        app:layout_constraintTop_toTopOf="@id/iv_minus_personnel"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>