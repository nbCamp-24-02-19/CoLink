<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_product_link_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:text="@string/product_edit_link_header"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_product_link"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_product_link_header"
        android:src="@drawable/ic_link"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_product_web_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_round_corner_4dp"
        android:backgroundTint="@color/color_content"
        android:gravity="top"
        android:padding="8dp"
        android:textSize="12sp"
        android:inputType="text"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_product_link"
        app:layout_constraintTop_toBottomOf="@id/tv_product_link_header"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_product_store_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:text="@string/product_edit_store_link_header"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_product_web_link"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_product_aos_link"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_product_store_header"
        android:src="@drawable/ic_aos"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_product_aos_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_round_corner_4dp"
        android:backgroundTint="@color/color_content"
        android:gravity="top"
        android:padding="8dp"
        android:textSize="12sp"
        android:inputType="text"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_product_aos_link"
        app:layout_constraintTop_toBottomOf="@id/tv_product_store_header"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_product_ios_link"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_product_aos_link"
        android:src="@drawable/ic_ios"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_product_ios_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_round_corner_4dp"
        android:backgroundTint="@color/color_content"
        android:gravity="top"
        android:padding="8dp"
        android:textSize="12sp"
        android:inputType="text"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_product_ios_link"
        app:layout_constraintTop_toBottomOf="@id/et_product_aos_link"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>