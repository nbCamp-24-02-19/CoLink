<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:paddingVertical="24dp"
        android:background="@drawable/selector_view_whitebg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_searchItem_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/forth_color"
                android:fontFamily="@font/inter_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="@string/search_filter_project"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_searchItem_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/study_color"
                android:fontFamily="@font/inter_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="@string/search_filter_study"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_searchItem_recruitEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/recruit_end"
                android:fontFamily="@font/inter_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="@string/search_filter_end"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_searchItem_recruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_round_corner_12dp"
                android:backgroundTint="@color/main_color"
                android:fontFamily="@font/inter_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="@string/search_filter_recruit"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_searchItem_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:maxLines="1"
                    android:text="@string/search_post_title"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_searchItem_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="2"
                    android:text="@string/search_post_description"
                    android:textColor="@color/typo_color"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_searchItem_thumbnail"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_dialog_project" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_searchItem_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/search_post_tag"
                android:textColor="@color/forth_color"
                android:textSize="11sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_searchItem_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/search_post_poster"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/search_post_divider"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_searchItem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/search_post_time"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <ImageView
                android:id="@+id/iv_searchItem_heart"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_heart"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_searchItem_heartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/search_post_heart"
                android:textColor="@color/typo_color"
                android:textSize="11sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_searchItem_view"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_view" />

            <TextView
                android:id="@+id/tv_searchItem_viewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/search_post_view"
                android:textColor="@color/typo_color"
                android:textSize="11sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>