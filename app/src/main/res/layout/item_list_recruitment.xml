<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/tv_recruit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dashed_line"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/dashed_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_recruit_type"
        app:layout_constraintEnd_toStartOf="@id/tv_recruit_personnel"
        app:layout_constraintStart_toEndOf="@id/tv_recruit_type"
        app:layout_constraintTop_toTopOf="@id/tv_recruit_type" />

    <TextView
        android:id="@+id/tv_recruit_personnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:text="@string/personnel"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_recruit_type"
        app:layout_constraintEnd_toStartOf="@id/iv_recruit_item_delete"
        app:layout_constraintTop_toTopOf="@id/tv_recruit_type" />

    <ImageView
        android:id="@+id/iv_recruit_item_delete"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_delete_24dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_recruit_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_recruit_type" />

</androidx.constraintlayout.widget.ConstraintLayout>